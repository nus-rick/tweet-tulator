{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2016",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "api",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ]
}
